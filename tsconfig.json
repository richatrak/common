{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,

    "strict": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./lib",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/__tests__/*"
  ]
}
